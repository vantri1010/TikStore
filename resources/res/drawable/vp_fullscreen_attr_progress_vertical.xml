<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="@color/vp_fullscreen_att_seekbar_color" android:endColor="@color/vp_fullscreen_att_seekbar_color" android:angle="270" android:centerY="0.75" android:centerColor="@color/vp_fullscreen_att_seekbar_color"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="bottom" android:clipOrientation="vertical">
            <shape>
                <gradient android:startColor="@color/vp_fullscreen_att_seekbar_progress_color" android:endColor="@color/vp_fullscreen_att_seekbar_progress_color" android:angle="270" android:centerY="0.75" android:centerColor="@color/vp_fullscreen_att_seekbar_progress_color"/>
            </shape>
        </clip>
    </item>
</layer-list>
