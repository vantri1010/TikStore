            </LinearLayout>
            <im.bclpbkiauv.ui.hcells.MryDividerCell android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="16dp"/>
            <im.bclpbkiauv.ui.hviews.MryTextView android:gravity="center_vertical" android:id="@+id/tvNoteSettingView" android:background="@color/white" android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dp_56" android:drawableRight="@mipmap/icon_arrow_right" app:render="true" app:textKey="SetGroupingAndRemarks"/>
            <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rlBioSettingView" android:background="@color/white" android:paddingLeft="16dp" android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:minHeight="55dp">
                <im.bclpbkiauv.ui.hviews.MryTextView android:textSize="15sp" android:textColor="#cccccc" android:id="@+id/tvBioDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/UserBio" app:render="true"/>
                <TextView android:textSize="14sp" android:ellipsize="end" android:gravity="right" android:id="@+id/tvBioText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="2" android:singleLine="true" android:layout_toRightOf="@+id/tvBioDesc" android:layout_alignParentRight="true" android:lineSpacingExtra="3dp"/>
            </RelativeLayout>
            <im.bclpbkiauv.ui.hcells.MryDividerCell android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="16dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llOriginalView" android:background="@color/white" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="55dp">
                <im.bclpbkiauv.ui.hviews.MryTextView android:textSize="15sp" android:id="@+id/tvOriginalDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="来源" app:render="true"/>
                <TextView android:textSize="14sp" android:gravity="end" android:id="@+id/tvOriginalText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textColor="#238aff" android:gravity="center" android:id="@+id/tvAddContactStatus" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="10dp" android:text="@string/AddFriends"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</im.bclpbkiauv.ui.hviews.sliding.SlidingLayout>
