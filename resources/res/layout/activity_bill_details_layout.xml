<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageView android:layout_gravity="center" android:id="@+id/ivIcon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="40dp" android:src="@mipmap/icon_paybill_btc_big"/>
                    <TextView android:textSize="21sp" android:textColor="@color/color_333333" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/tvAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:maxLines="2"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/llIconView" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageView android:layout_gravity="center" android:id="@+id/ivIcon2" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="40dp" android:src="@mipmap/icon_paybill_btc_big"/>
                    <TextView android:textSize="21sp" android:textColor="@color/color_333333" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/tvAmount2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:maxLines="2"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <include layout="@layout/view_ordinary_transaction_layout"/>
                <include layout="@layout/view_currency_transaction_layout"/>
                <include layout="@layout/view_fiat_transaction_layout"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
