        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_remark_layout" android:background="@color/white" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="10dp">
