            <im.bclpbkiauv.ui.hviews.MryTextView android:textSize="16sp" android:textColor="@color/color_text_black_222222" android:gravity="center_vertical" android:id="@+id/tv_red_packet_unit" android:layout_width="wrap_content" android:layout_height="match_parent" app:textKey="UnitCNY"/>
