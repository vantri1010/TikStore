        <Button android:textSize="@dimen/sp_15" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_red_packet_send" android:background="@drawable/selector_btn_send_game" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="25dp" android:layout_marginTop="10dp" android:layout_marginRight="25dp" android:text="@string/SendHotCoin"/>
        <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tv_time_out_desc" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="20dp" android:text="24小时内未被领取，红包将退回"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
