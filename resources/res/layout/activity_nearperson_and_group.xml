<?xml version="1.0" encoding="utf-8"?>
<im.bclpbkiauv.ui.components.ColorLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_title_bar" android:layout_width="match_parent" android:layout_height="@dimen/actionbar_height">
        <RelativeLayout android:gravity="center" android:id="@+id/rl_back" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="10dp" android:layout_centerVertical="true">
            <ImageView android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_back" android:tint="@color/color_text_black_000000"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
            <TextView android:textSize="13sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_near_person" android:background="@drawable/near_person_tab1_bg" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="100dp" android:layout_height="30dp" android:text="@string/PeopleNearbyHeader"/>
            <TextView android:textSize="13sp" android:textColor="#007afe" android:gravity="center" android:id="@+id/tv_near_group" android:background="@drawable/near_person_tab2_bg" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="100dp" android:layout_height="30dp" android:text="@string/ChatsNearbyHeader"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rl_more" android:visibility="gone" android:layout_width="30dp" android:layout_height="23dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/iv_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_near_more" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <im.bclpbkiauv.ui.cells.DividerCell android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="0dp"/>
    <FrameLayout android:id="@+id/fl_container" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent"/>
</im.bclpbkiauv.ui.components.ColorLinearLayout>
