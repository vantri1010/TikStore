            </LinearLayout>
            <ImageView android:id="@+id/iv_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="23dp" android:src="@mipmap/ic_add_new_call" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </FrameLayout>
    <im.bclpbkiauv.ui.cells.DividerCell android:layout_width="match_parent" android:layout_height="1px"/>
    <EditText android:textSize="14sp" android:textColor="#a7a7a7" android:textColorHint="#c7c7c7" android:gravity="center" android:id="@+id/et_search" android:background="@drawable/new_call_search_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/new_call_search_height" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:hint="@string/new_call_search_hint"/>
    <FrameLayout android:id="@+id/fl_container" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent"/>
</im.bclpbkiauv.ui.components.ColorLinearLayout>
