<?xml version="1.0" encoding="utf-8"?>
<im.bclpbkiauv.ui.components.ColorLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/ll_container" android:background="#fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fl_title_bar_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_title_bar" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:gravity="center" android:id="@+id/rl_back" android:visibility="invisible" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="10dp" android:layout_centerVertical="true">
                <ImageView android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_back"/>
            </RelativeLayout>
            <LinearLayout android:id="@+id/tabContainer" android:background="@drawable/shape_new_call_tap_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
                <im.bclpbkiauv.ui.components.ColorTextView android:textSize="12.5sp" android:gravity="center" android:id="@+id/tv_all_call" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="68dp" android:layout_height="26.5dp" android:text="@string/new_call_all" app:stringkey="new_call_all"/>
