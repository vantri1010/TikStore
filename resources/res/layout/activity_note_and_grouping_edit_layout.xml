        <EditText android:textSize="14sp" android:textColor="@color/color_text_black_222222" android:gravity="center_vertical" android:id="@+id/etNoteEditView" android:background="@null" android:paddingRight="26dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/SetNoteTips" android:maxLength="64"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivClearNoteView" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_clear_remarks"/>
    </FrameLayout>
</LinearLayout>
