<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="80dp">
        <im.bclpbkiauv.ui.components.BackupImageView android:id="@+id/ivAvatar" android:layout_width="60dp" android:layout_height="60dp"/>
        <LinearLayout android:orientation="vertical" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_weight="1">
            <im.bclpbkiauv.ui.hviews.MryTextView android:textSize="14sp" android:gravity="top" android:layout_gravity="top" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" app:render="true"/>
            <im.bclpbkiauv.ui.hviews.MryTextView android:textSize="12sp" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="bottom" android:id="@+id/tvDescription" android:layout_width="match_parent" android:layout_height="0dp" android:singleLine="true" android:layout_weight="1"/>
            <im.bclpbkiauv.ui.hviews.MryRoundButton android:textSize="11sp" android:gravity="center" android:layout_gravity="bottom" android:id="@+id/tvTag" android:paddingLeft="2dp" android:paddingTop="1dp" android:paddingRight="2dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp">
            <im.bclpbkiauv.ui.hviews.MryRoundButton android:textSize="12sp" android:gravity="center" android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/btn" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="25dp"/>
            <Space android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>
            <im.bclpbkiauv.ui.hviews.MryTextView android:textSize="11sp" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/tvCount" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <im.bclpbkiauv.ui.cells.DividerCell android:id="@+id/divider" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
