<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/iv_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_centerInParent="true"/>
        <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_unred_num" android:background="@drawable/shape_unread" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginLeft="16dp" android:text="99+" android:layout_alignLeft="@+id/iv_icon"/>
        <TextView android:textSize="6sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_msg" android:background="@drawable/shape_msg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="NEW" android:layout_alignLeft="@+id/iv_icon" android:layout_centerHorizontal="true"/>
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/tv_point" android:background="@drawable/shape_notify_point" android:visibility="gone" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginTop="-2dp" android:layout_marginRight="-4dp" android:layout_alignTop="@+id/iv_icon" android:layout_alignRight="@+id/iv_icon"/>
    </RelativeLayout>
    <TextView android:id="@+id/tv_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
