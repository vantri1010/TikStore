<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlTitle" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:id="@+id/tvRemind" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_centerVertical="true" android:layout_marginStart="-32dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/bbl_999999" android:id="@+id/tvTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/llBody" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="26dp">
            <LinearLayout android:orientation="horizontal" android:id="@+id/llAmount1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="99dp">
                <ImageView android:layout_gravity="center" android:id="@+id/ivSmallIconBig" android:visibility="visible" android:layout_width="30dp" android:layout_height="30dp" android:src="@mipmap/icon_paybill_big"/>
                <TextView android:textSize="20sp" android:textColor="@color/color_333333" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/tvAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlAmount2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="26dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="99dp">
                <ImageView android:layout_gravity="center" android:id="@+id/ivSmallIconBig2" android:visibility="visible" android:layout_width="30dp" android:layout_height="30dp" android:src="@mipmap/icon_paybill_big"/>
                <TextView android:textSize="20sp" android:textColor="@color/color_333333" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/tvAmount2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
        <Space android:id="@+id/space" android:visibility="gone" android:layout_width="match_parent" android:layout_height="26dp"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/rlRow1" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/color_text_999999" android:id="@+id/tvRow1Name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:id="@+id/tvRow1Info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/rlRow2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
            <TextView android:textSize="14sp" android:textColor="@color/color_text_999999" android:id="@+id/tvRow2Name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/tvRow2Info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="100dp" android:layout_marginRight="15dp" android:singleLine="true" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/rlRow3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
            <TextView android:textSize="14sp" android:textColor="@color/color_text_999999" android:id="@+id/tvRow3Name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:ellipsize="end" android:id="@+id/tvRow3Info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="100dp" android:layout_marginRight="15dp" android:singleLine="true" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="#ededed" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:layout_marginRight="12dp"/>
        <RelativeLayout android:id="@+id/rlSeeDetails" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/color_333333" android:id="@+id/tvSeeDetails" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
            <ImageView android:background="@mipmap/fc_icon_publish_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
