<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/img_header" android:layout_width="match_parent" android:layout_height="282dp" android:src="@mipmap/ic_profile_header" android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="0"/>
    <View android:id="@+id/v_bg" android:background="@drawable/shape_profile" android:layout_width="match_parent" android:layout_height="170dp" android:layout_marginTop="250dp" app:layout_constraintTop_toTopOf="0"/>
    <im.bclpbkiauv.ui.components.BackupImageView android:id="@+id/iv_avatar" android:layout_width="75dp" android:layout_height="75dp" android:layout_marginTop="210dp" android:src="@mipmap/icon_create_group_bg" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="23dp" android:paddingTop="16dp" android:paddingRight="13.5dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/img_header">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_weight="1">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="16.5sp" android:textColor="@color/color_text_black_222222" android:ellipsize="end" android:id="@+id/tv_nick_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:maxLines="1" android:singleLine="true" android:layout_weight="1"/>
                <ImageView android:id="@+id/iv_gender" android:visibility="gone" android:layout_width="12dp" android:layout_height="12dp" android:src="@mipmap/ic_female"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5">
                <TextView android:textSize="@dimen/dp_12" android:textColor="@color/color_text_profile_account" android:ellipsize="end" android:id="@+id/tv_account" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/AppNameCode" android:maxLines="1" android:singleLine="true" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:textSize="13.5sp" android:textColor="#ffb7b7b7" android:id="@+id/tv_update_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
            <im.bclpbkiauv.ui.hviews.MryRoundButton android:textSize="12sp" android:gravity="center" android:id="@+id/btnBotFollow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="64dp" android:text="@string/fc_page_title_follow" android:height="28dp" android:singleLine="true" android:drawablePadding="4dp" android:drawableStart="@mipmap/ic_bot_follow" app:textKey="fc_page_title_follow"/>
            <im.bclpbkiauv.ui.hviews.MryAlphaImageView android:id="@+id/iv_call" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_call"/>
        </FrameLayout>
    </LinearLayout>
    <im.bclpbkiauv.ui.cells.DividerCell android:id="@+id/divider" android:background="#ffc9c9c9" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="23dp" android:layout_alignParentBottom="true" app:layout_constraintTop_toBottomOf="@+id/v_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
