            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/zsLayout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
                <im.bclpbkiauv.ui.components.BackupImageView android:id="@+id/zsAvatar" android:layout_width="@dimen/dp_25" android:layout_height="@dimen/dp_25"/>
                <TextView android:textSize="14sp" android:textColor="#fffad59c" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/zsText" android:paddingLeft="@dimen/dp_10" android:paddingRight="@dimen/dp_10" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
