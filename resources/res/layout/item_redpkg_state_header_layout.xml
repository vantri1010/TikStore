    <LinearLayout android:orientation="vertical" android:id="@+id/llUserLayout" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <im.bclpbkiauv.ui.components.BackupImageView android:layout_gravity="center_horizontal" android:id="@+id/ivRptAvatar" android:layout_width="@dimen/dp_60" android:layout_height="@dimen/dp_60" android:layout_marginTop="100dp" android:src="@mipmap/ic_logo"/>
