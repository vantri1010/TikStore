<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rl_root_photo_preview" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/title" android:background="@color/black" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:textSize="16sp" android:layout_gravity="left" android:id="@+id/iv_back" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/back_white" android:layout_centerVertical="true"/>
        <ImageView android:textSize="16sp" android:id="@+id/img_menu" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/big_pic_menu" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="#ffffffff" android:id="@+id/txt_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/fl_viewpager_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/title"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_dot_indicator_photo_preview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="40dp" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_text_indicator_photo_preview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="36dp" android:layout_alignParentBottom="true"/>
    <ImageView android:id="@+id/iv_select_dot_photo_preview" android:visibility="gone" android:layout_width="7dp" android:layout_height="7dp" android:layout_marginBottom="40dp" android:src="@drawable/selected_dot" android:layout_alignParentBottom="true"/>
</RelativeLayout>
