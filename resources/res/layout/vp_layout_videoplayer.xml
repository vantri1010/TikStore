    <include layout="@layout/vp_layout_videoplayer_bottom_controller"/>
    <ProgressBar android:id="@+id/vp_video_bottom_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/vp_bottom_progress_bar_height" android:max="100" android:progressDrawable="@drawable/vp_bottom_controller_seek_progress_drawable" android:layout_alignParentBottom="true" style="?android:attr/progressBarStyleHorizontal"/>
