    </LinearLayout>
    <ImageView android:id="@+id/vp_video_small_window_back" android:background="@drawable/vp_small_window_back_selector" android:visibility="gone" android:layout_width="@dimen/vp_small_window_back_size" android:layout_height="@dimen/vp_small_window_back_size" android:layout_marginLeft="@dimen/vp_small_window_back_margin" android:layout_marginTop="@dimen/vp_small_window_back_margin" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_marginStart="@dimen/vp_small_window_back_margin" android:layout_alignParentStart="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/vp_video_header_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/vp_video_header_view_height">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/vp_video_fullScreen_back" android:background="@drawable/vp_fullscreen_back" android:paddingLeft="@dimen/vp_video_header_view_padding" android:paddingRight="@dimen/vp_video_header_view_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/vp_video_header_view_padding" android:paddingStart="@dimen/vp_video_header_view_padding" android:paddingEnd="@dimen/vp_video_header_view_padding" android:layout_marginStart="@dimen/vp_video_header_view_padding"/>
        <TextView android:textSize="@dimen/vp_video_title_text_size" android:textColor="@color/vp_video_title_color" android:layout_gravity="center_vertical" android:id="@+id/vp_video_title" android:paddingRight="@dimen/vp_video_header_view_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/vp_video_header_view_padding" android:maxLines="2" android:paddingEnd="@dimen/vp_video_header_view_padding" android:layout_marginStart="@dimen/vp_video_header_view_padding"/>
    </LinearLayout>
</merge>
