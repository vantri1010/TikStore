    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/vp_video_play_error_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/vp_error_text_size" android:textColor="@color/vp_error_text_color" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/vp_error_margin" android:text="@string/vp_load_failed"/>
