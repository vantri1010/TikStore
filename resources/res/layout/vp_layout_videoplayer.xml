<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/vp_video_surface_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/vp_video_thumb" android:background="@drawable/shape_fc_default_pic_bg" android:layout_width="match_parent" android:layout_height="match_parent"/>
