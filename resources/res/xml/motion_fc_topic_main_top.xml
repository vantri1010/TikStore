<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <Transition app:constraintSetEnd="@+id/end" app:constraintSetStart="@+id/start" app:duration="1000" app:motionInterpolator="3">
        <OnSwipe app:dragDirection="0" app:touchAnchorId="@+id/background" app:touchAnchorSide="3"/>
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/ivActionBarBg" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="1" android:scaleX="1.1" android:scaleY="1.1" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <Constraint android:textSize="18sp" android:id="@+id/tvTopicName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <Constraint android:id="@+id/btnFollow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="10dp" app:layout_constraintBottom_toBottomOf="@+id/tvScanCount" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tvTopicName"/>
        <Constraint android:textSize="13sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tvScanCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:singleLine="true" android:alpha="1" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvTopicName"/>
        <Constraint android:textSize="13sp" android:textColor="@color/white" android:id="@+id/tvTopicDes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginBottom="35dp" android:maxLines="2" android:lineSpacingExtra="5dp" android:alpha="0.7" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/ivActionBarBg" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.7" android:translationX="0dp" android:translationY="100dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <Constraint android:textSize="15sp" android:id="@+id/tvTopicName" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0"/>
        <Constraint android:id="@+id/btnFollow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="68dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0"/>
        <Constraint android:textSize="13sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tvScanCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:singleLine="true" android:alpha="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvTopicName"/>
        <Constraint android:textSize="13sp" android:textColor="@color/white" android:id="@+id/tvTopicDes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginBottom="35dp" android:maxLines="2" android:lineSpacingExtra="5dp" android:alpha="0" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0"/>
    </ConstraintSet>
</MotionScene>
